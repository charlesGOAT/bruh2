@model UserDTO
<h1>Details</h1>

<div>
    <h4>Product</h4>
    <hr />
    @if (ViewData["img"] != null)
    {
        <img src="@ViewData["img"]" class="detailImg" />
    }
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.User.UserName)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.User.UserName)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.User.Email)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.User.Email)
        </dd>

        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Role)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Role)
        </dd>
        @if (Model.Role == "Customer")
        {
            <dt class="col-sm-2">
                First Name
            </dt>
            <dd class="col-sm-10">
                @Model.Customer.FirstName
            </dd>
            <dt class="col-sm-2">
                Last name
            </dt>
            <dd class="col-sm-10">
                @Model.Customer.LastName
            </dd>
            <dt class="col-sm-2">
                Phone Number
            </dt>
            <dd class="col-sm-10">
                @Model.Customer.PhoneNumber
            </dd>
            <dt class="col-sm-2">
                Province
            </dt>
            <dd class="col-sm-10">
                @Model.Customer.Province
            </dd>
            <dt class="col-sm-2">
                Credit Card
            </dt>
            <dd class="col-sm-10">
                @Model.Customer.CreditCard
            </dd>
        }
    </dl>
</div>
<div>
    <a asp-action="Edit" asp-route-id="@Model.User.UserName">Edit</a> |
    <a asp-action="Index">Back to List</a>
</div>
